<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <FrameLayout
        android:id="@+id/homePageFrameLayoutId"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_gravity="center">
                <madbarsoft.com.computermcqqa.utility.Textview_lato_thin
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6"
                    android:gravity="center"
                    android:text="Complete Solution for Written and Viva Exam\n ( Computer General Knowledge )"
                    android:textColor="#ffff"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:layout_below="@+id/homePageFrameLayoutId"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rowId_01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/categoryHolderCVctId_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_marginRight="10dp"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cardview_bg"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="5dp"
                        android:layout_height="180dp"
                        android:background="@color/colorOrange"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <madbarsoft.com.computermcqqa.utility.TextView_Lato
                            android:id="@+id/categoryTitleHolderTVctId_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Computer History"
                            android:textColor="@color/colorGray"
                            android:textSize="16dp"
                            android:textStyle="bold" />
                        <madbarsoft.com.computermcqqa.utility.Textview_lato_thin
                            android:id="@+id/categorySubTitleHolderTVctId_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Question: 50"
                            android:textColor="@color/colorLightGray"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:padding="5dp"
                    android:gravity="bottom">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:orientation="horizontal"
                        >
                        <Button
                            android:id="@+id/categorySelfTestBtnCtId_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:background="@drawable/ripple_effect"
                            android:layout_margin="1dp"
                            android:tag="10"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:onClick="goToSelfTestBtn"
                            android:textColor="@color/colorBackroundWhite"
                            android:text="Test"/>
                        <Button
                            android:id="@+id/categoryPractiseBtnCtId_10"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:background="@drawable/ripple_effect"
                            android:layout_margin="1dp"
                            android:tag="10"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:onClick="goToPractiseBtn"
                            android:text="Practise"
                            android:textColor="@color/colorBackroundWhite"
                            android:layout_weight="1.0" />
                    </LinearLayout>
                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/categoryHolderCVctId_11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cardview_bg"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="5dp"
                        android:layout_height="180dp"
                        android:background="@color/colorOrange"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <madbarsoft.com.computermcqqa.utility.TextView_Lato
                            android:id="@+id/categoryTitleHolderTVctId_11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Computer Network"
                            android:textColor="@color/colorGray"
                            android:textSize="16dp"
                            android:textStyle="bold" />
                        <madbarsoft.com.computermcqqa.utility.Textview_lato_thin
                            android:id="@+id/categorySubTitleHolderTVctId_11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Question: 100"
                            android:textColor="@color/colorLightGray"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:padding="5dp"
                    android:gravity="bottom">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:orientation="horizontal"
                        >
                        <Button
                            android:id="@+id/categorySelfTestBtnCtId_11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:background="@drawable/ripple_effect"
                            android:layout_margin="1dp"
                            android:tag="11"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:onClick="goToSelfTestBtn"
                            android:textColor="@color/colorBackroundWhite"
                            android:text="Test"/>
                        <Button
                            android:id="@+id/categoryPractiseBtnCtId_11"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:background="@drawable/ripple_effect"
                            android:layout_margin="1dp"
                            android:tag="11"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:onClick="goToPractiseBtn"
                            android:text="Practise"
                            android:textColor="@color/colorBackroundWhite"
                            android:layout_weight="1.0" />
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/rowId_02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/categoryHolderCVctId_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:layout_marginRight="10dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="4dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/cardview_bg"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="5dp"
                            android:layout_height="180dp"
                            android:background="@color/colorOrange"></View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="top"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical"
                            android:paddingLeft="10dp">

                            <madbarsoft.com.computermcqqa.utility.TextView_Lato
                                android:id="@+id/categoryTitleHolderTVctId_12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Computer Operating System"
                                android:textColor="@color/colorGray"
                                android:textSize="16dp"
                                android:textStyle="bold" />
                            <madbarsoft.com.computermcqqa.utility.Textview_lato_thin
                                android:id="@+id/categorySubTitleHolderTVctId_12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Question: 50"
                                android:textColor="@color/colorLightGray"
                                android:textSize="14dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:padding="5dp"
                        android:gravity="bottom">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center_horizontal"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:orientation="horizontal"
                            >
                            <Button
                                android:id="@+id/categorySelfTestBtnCtId_12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:background="@drawable/ripple_effect"
                                android:layout_margin="1dp"
                                android:tag="12"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                android:onClick="goToSelfTestBtn"
                                android:textColor="@color/colorBackroundWhite"
                                android:text="Test"/>
                            <Button
                                android:id="@+id/categoryPractiseBtnCtId_12"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:background="@drawable/ripple_effect"
                                android:layout_margin="1dp"
                                android:tag="12"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                android:onClick="goToPractiseBtn"
                                android:text="Practise"
                                android:textColor="@color/colorBackroundWhite"
                                android:layout_weight="1.0" />
                        </LinearLayout>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/categoryHolderCVctId_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="4dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/cardview_bg"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="5dp"
                            android:layout_height="180dp"
                            android:background="@color/colorOrange"></View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="top"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical"
                            android:paddingLeft="10dp">

                            <madbarsoft.com.computermcqqa.utility.TextView_Lato
                                android:id="@+id/categoryTitleHolderTVctId_14"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Computer Hardware"
                                android:textColor="@color/colorGray"
                                android:textSize="16dp"
                                android:textStyle="bold" />
                            <madbarsoft.com.computermcqqa.utility.Textview_lato_thin
                                android:id="@+id/categorySubTitleHolderTVctId_14"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Question: 100"
                                android:textColor="@color/colorLightGray"
                                android:textSize="14dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:padding="5dp"
                        android:gravity="bottom">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center_horizontal"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:orientation="horizontal"
                            >
                            <Button
                                android:id="@+id/categorySelfTestBtnCtId_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:background="@drawable/ripple_effect"
                                android:layout_margin="1dp"
                                android:tag="13"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                android:onClick="goToSelfTestBtn"
                                android:textColor="@color/colorBackroundWhite"
                                android:text="Test"/>
                            <Button
                                android:id="@+id/categoryPractiseBtnCtId_14"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:background="@drawable/ripple_effect"
                                android:layout_margin="1dp"
                                android:tag="13"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                android:onClick="goToPractiseBtn"
                                android:text="Practise"
                                android:textColor="@color/colorBackroundWhite"
                                android:layout_weight="1.0" />
                        </LinearLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:id="@+id/showSelfTestHistoryCV"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                card_view:cardCornerRadius="2dp"
                android:onClick="showSelfTestHistory"
                card_view:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cardview_bg"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="5dp"
                        android:layout_height="100dp"
                        android:background="@color/colorPrimary"></View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">
                        <madbarsoft.com.computermcqqa.utility.TextView_Lato
                            android:id="@+id/listViewQuestionHolderId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Shelf Test History"
                            android:textColor="@color/colorGray"
                            android:textSize="16dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:padding="5dp"
                    android:gravity="bottom">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <madbarsoft.com.computermcqqa.utility.TextView_Lato
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/roun_rect_lightgray"
                            android:gravity="center"
                            android:text=">>"
                            android:textColor="@color/colorGray"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>



        </LinearLayout>
    </ScrollView>
</RelativeLayout>