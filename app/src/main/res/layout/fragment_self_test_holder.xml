<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".selftest.SelfTestHolderFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="7dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardview_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="5">
                <View
                    android:layout_width="5dp"
                    android:layout_height="100dp"
                    android:background="@color/colorPrimary"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <madbarsoft.com.computermcqqa.utility.TextView_Lato
                        android:id="@+id/categoryNameHolderTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Here Will Be Category Title"
                        android:textColor="@color/colorGray"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <madbarsoft.com.computermcqqa.utility.Textview_lato_thin
                        android:id="@+id/currentStatusTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Data Scientist"
                        android:textColor="@color/colorLightGray"
                        android:textSize="10dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <madbarsoft.com.computermcqqa.utility.TextView_Lato
            android:id="@+id/selfTestStatusTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Here Will Be Category Title"
            android:textColor="@color/colorGray"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />

        <madbarsoft.com.computermcqqa.utility.TextView_Lato
            android:id="@+id/testQuestionTitleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Here Will Be Category Title"
            android:textColor="@color/colorGray"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/mcqRadioBtnHolder"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:orientation="vertical"
            android:background="@color/cardview_light_background"
            android:padding="10dp">

            <RadioGroup
                android:id="@+id/mcqRadioBtnGroupId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="14dp">

            </RadioGroup>




        </ScrollView>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btnHomeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/home"
                android:background="@color/colorOrange"
                android:layout_margin="2dp"
                android:padding="10dp"
                android:layout_weight="1.0"
                android:textSize="24sp"/>

            <Button
                android:id="@+id/btnNextId"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@color/colorOrange"
                android:layout_margin="1dp"
                android:padding="10dp"
                android:drawableTop="@android:drawable/ic_media_next"
                android:layout_weight="1.0"
                android:textSize="24sp"/>



        </LinearLayout>
    </RelativeLayout>


</FrameLayout>