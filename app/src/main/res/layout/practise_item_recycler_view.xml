<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_light_background"
    android:padding="10dp"
    android:layout_marginBottom="5dp">

    <madbarsoft.com.computermcqqa.utility.TextView_Lato
        android:id="@+id/questionTitleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Computer History"
        android:textColor="@color/colorGray"
        android:textSize="16dp"
        android:textStyle="bold" />
    <madbarsoft.com.computermcqqa.utility.Textview_lato_thin
        android:id="@+id/answerListHolderTV"
        android:layout_below="@+id/questionTitleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Question:100"
        android:textColor="@color/colorGray"
        android:textSize="14dp" />
    <LinearLayout
        android:id="@+id/practiseShowAnsButtonHolder"
        android:layout_below="@+id/answerListHolderTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical"
        >
        <madbarsoft.com.computermcqqa.utility.TextView_Lato
            android:id="@+id/show_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roun_rect_orange"
            android:text="Answer"
            android:textColor="#fff"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>
    <at.blogc.android.views.ExpandableTextView
        android:id="@+id/correctAnsExpandableTV"
        android:layout_width="match_parent"
        android:layout_below="@+id/practiseShowAnsButtonHolder"
        android:layout_height="wrap_content"
        android:text="this is ans"
        android:maxLines="0"
        android:textSize="14dp"
        android:textColor="@color/colorPrimary"
        android:ellipsize="end"
        app:animation_duration="750"/>
</RelativeLayout>
